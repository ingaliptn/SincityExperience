            <script type="text/javascript">
                function validate() {
                    if (document.booking.firstname.value == "") {
                        alert("Please provide your first name!");
                        document.booking.firstname.focus();
                        return false;
                    }
                    if (document.booking.lastname.value == "") {
                        alert("Please provide your last name!");
                        document.booking.lastname.focus();
                        return false;
                    }
                    if (document.booking.hotelname.value == "") {
                        alert("Please provide your hotel name!");
                        document.booking.hotelname.focus();
                        return false;
                    }
                    if (document.booking.hotelroom.value == "") {
                        alert("Please provide your hotel room number!");
                        document.booking.hotelroom.focus();
                        return false;
                    }
                    if (document.booking.email.value == "") {
                        alert("Please provide your email!");
                        document.booking.email.focus();
                        return false;
                    }
                    if (document.booking.phone.value == "") {
                        alert("Please provide your phone number!");
                        document.booking.phone.focus();
                        return false;
                    }
                }
            </script>
            <script type="text/javascript" src="js/jquery.validate.min.js"></script>
